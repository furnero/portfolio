Options -Indexes

<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<FilesMatch "(^#.*#|\.(bak|conf|dist|fla|in[ci]|log|psd|sh|sql|sw[op])|~)$">
    Require all denied
</FilesMatch>

<Files "robots.txt">
    Require all granted
</Files>

<Files ".htaccess">
    Require all denied
</Files>

AddDefaultCharset UTF-8

Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set X-Content-Type-Options "nosniff"

RewriteRule ^furaffinity/?$ https://www.furaffinity.net/user/nerozhen [R=301,L]